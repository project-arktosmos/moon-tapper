{
	"name": "pokemon-cardio-companion",
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "tauri dev",
		"dev:qq": "node scripts/generate-qq-locale.js",
		"build": "node scripts/generate-routes.js && vite build",
		"preview": "vite preview",
		"prepare": "node scripts/generate-routes.js && svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"test": "vitest run",
		"test:ui": "vitest --ui",
		"test:coverage": "vitest run --coverage",
		"import:cheats": "node scripts/import-cheats.js",
		"remove-sprite-bg": "python3 scripts/remove-sprite-bg.py",
		"clean": "rm -rf dist .svelte-kit",
		"tauri": "tauri",
		"tauri:dev": "tauri dev",
		"tauri:build": "tauri build",
		"tauri:build:mac": "tauri build --target universal-apple-darwin",
		"tauri:build:windows": "tauri build --target x86_64-pc-windows-msvc",
		"tauri:build:linux": "tauri build --target x86_64-unknown-linux-gnu",
		"tauri:android:init": "tauri android init",
		"tauri:android:dev": "tauri android dev",
		"tauri:android:build": "tauri android build",
		"tauri:ios:init": "tauri ios init",
		"tauri:ios:dev": "tauri ios dev",
		"tauri:ios:build": "tauri ios build"
	},
	"dependencies": {
		"@sveltejs/adapter-static": "^3.0.9",
		"@tauri-apps/api": "^2.0.0",
		"@tauri-apps/plugin-dialog": "^2.6.0",
		"@tauri-apps/plugin-shell": "^2.0.0",
		"classnames": "^2.5.1",
		"svelte-i18n": "^4.0.1"
	},
	"devDependencies": {
		"@sveltejs/kit": "^2.22.0",
		"@sveltejs/vite-plugin-svelte": "^6.0.0",
		"@tailwindcss/vite": "^4.0.0",
		"@tauri-apps/cli": "^2.0.0",
		"@testing-library/jest-dom": "^6.9.1",
		"@testing-library/svelte": "^5.2.8",
		"@vitest/coverage-v8": "^4.0.6",
		"@vitest/ui": "^4.0.6",
		"daisyui": "^5.0.50",
		"eslint": "^9.18.0",
		"happy-dom": "^20.0.10",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.3",
		"prettier-plugin-tailwindcss": "^0.6.11",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"tailwindcss": "^4.0.0",
		"typescript": "^5.0.0",
		"vite": "^7.0.4",
		"vitest": "^4.0.6"
	}
}
