{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "pokemon-cardio-companion",
  "version": "0.0.1",
  "identifier": "com.arktosmos.pokemon-cardio-companion",
  "build": {
    "beforeDevCommand": "node scripts/generate-routes.js && vite dev",
    "devUrl": "http://localhost:9013",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Pokemon Cardio Companion",
        "width": 1920,
        "height": 1080,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [],
    "resources": ["resources/openvgdb.sqlite"],
    "linux": {
      "appimage": {
        "bundleMediaFramework": true
      }
    },
    "macOS": {
      "minimumSystemVersion": "10.13"
    },
    "windows": {
      "webviewInstallMode": {
        "type": "downloadBootstrapper"
      }
    }
  }
}
